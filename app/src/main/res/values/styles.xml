<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        //colors
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        //font
        <item name="fontFamily">@font/asleepytiming</item>
        <item name="android:textSize">22sp</item>
        <item name='android:textStyle'>italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ElementsOnBackgroundPadding">
        <item name="android:padding">16dp</item>
    </style>

    <style name="CardViewRecyclerViewPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AddInjectionCardView">
        <item name="backgroundColor">@color/colorTileCardView</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AddInjectionCardView.LayoutPadding">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AddInjectionCardView.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AddInjectionCardView.BottomItem">
        <item name="android:background">@drawable/black_border_frame</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ButtonDialog" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/colorWhite</item>
    </style>

    <style name="ButtonDialog.ButtonWithoutBorder" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InjectionsRecyclerViewItemHeader">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>